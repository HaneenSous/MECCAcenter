<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/ToolBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.moshx.indicators.title.TitleIndicator
            android:id="@+id/titleIndicator"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white" />

    </android.support.v7.widget.Toolbar>

    <it.neokree.materialtabs.MaterialTabHost
        xmlns:neokree="http://schemas.android.com/apk/res-auto"
        android:id="@+id/materialTabHost"
        android:layout_width="match_parent"
        android:layout_height="48dp"

        neokree:primaryColor="@color/primary"
        neokree:accentColor="@color/accent"
        neokree:hasIcons="true"

        neokree:iconColor="#FFFFFF" />


    <android.support.v4.view.ViewPager
        android:id="@+id/MainPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
